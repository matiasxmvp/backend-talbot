# Configuración para FastAPI con Procfile
# Solución: Configurar explícitamente el worker de uvicorn

packages:
  yum:
    python3-devel: []
    gcc: []
    libpq-devel: []

option_settings:
  aws:elasticbeanstalk:application:environment:
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
    PORT: "8000"
  aws:elasticbeanstalk:container:python:
    WSGIPath: "application:application"
    NumProcesses: 4
    NumThreads: 1
  aws:elbv2:listener:80:
    Protocol: HTTP
  aws:elbv2:listener:443:
    Protocol: HTTPS
    SSLCertificateArns: "arn:aws:acm:region:account:certificate/certificate-id"

container_commands:
  01_install_uvicorn_worker:
    command: "source /var/app/venv/*/bin/activate && pip install 'uvicorn[standard]' gunicorn"