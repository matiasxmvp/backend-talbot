option_settings:
  aws:elasticbeanstalk:application:environment:
    # Variables de entorno para producción
    # Estas se configurarán desde la consola de AWS
    ENVIRONMENT: "production"
    DEBUG: "False"
    PORT: "8000"
    HOST: "0.0.0.0"
    LOG_LEVEL: "INFO"
    ALGORITHM: "HS256"
    ACCESS_TOKEN_EXPIRE_MINUTES: "30"
    REFRESH_TOKEN_EXPIRE_DAYS: "7"
    RATE_LIMIT_PER_MINUTE: "60"
    SESSION_TIMEOUT_MINUTES: "60"
    # Contraseña por defecto del usuario administrador
    DEFAULT_ADMIN_PASSWORD: "admin123"
    
  # FastAPI es ASGI, se ejecuta a través del Procfile con uvicorn
  # No se necesita configuración WSGIPath
    
  aws:elasticbeanstalk:healthreporting:system:
    SystemType: "enhanced"
    
  aws:autoscaling:launchconfiguration:
    InstanceType: "t3.micro"
    
  aws:elasticbeanstalk:environment:
    LoadBalancerType: "application"
    
  # Deshabilitar actualizaciones administradas para evitar errores de permisos
  aws:elasticbeanstalk:managedactions:
    ManagedActionsEnabled: false